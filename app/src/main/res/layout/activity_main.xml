<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mhacks8.varun.metrodetroit.MainActivity">

    <Button
        android:text="@string/viewTicketButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/viewTicketButton"
        android:visibility="visible"
        android:onClick="viewTicketButtonClicked" />

    <Button
        android:text="@string/purchaseTicketsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewTicketButton"
        android:layout_marginTop="40dp"
        android:id="@+id/purchaseTicketsButton"
        android:visibility="visible"
        android:onClick="purchaseTicketsButtonClicked" />

    <Button
        android:text="@string/viewMapButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/purchaseTicketsButton"
        android:layout_marginTop="40dp"
        android:id="@+id/viewMapButton"
        android:visibility="visible"
        android:onClick="viewMapButtonClicked" />

</RelativeLayout>
